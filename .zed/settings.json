  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemaStore": {
            "enable": true
          },
          "completion": true,
          "schemas": {
            "kubernetes": "kubernetes/**/**.y*ml"
          }
        }
      }
    }
  }
}
