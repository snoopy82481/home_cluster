{
  "ansible.ansibleLint.arguments": "-c .github/linters/.ansible-lint",
  "ansible.ansible.path": ".venv/bin/ansible",
  "ansible.python.activationScript": ".venv/bin/activate",
  "ansible.python.interpreterPath": ".venv/bin/python3",
  "ansible.validation.enabled": true,
  "ansible.validation.lint.arguments": "-c ansible/.ansible-lint",
  "ansible.validation.lint.enabled": true,
  "ansible.validation.lint.path": ".venv/bin/ansible-lint",
  "files.associations": {
    "**/*.json5": "json5",
    "**/ansible/**/*.yml": "ansible",
    "**/ansible/**/*.sops.yml": "yaml",
    "**/ansible/**/inventory/**/*.yml": "yaml",
    "**/terraform/**/*.tf": "terraform",
    "./kubernetes/**/*.sops.toml": "plaintext",
    "*.env": "dotenv"
  },
  "prettier.configPath": ".ci/prettier/.prettierrc.yaml",
  "prettier.ignorePath": ".github/linters/.prettierignore",
  "explorer.autoReveal": false,
  "editor.fontLigatures": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.hover.delay": 1500,
  "files.trimTrailingWhitespace": true,
  "cSpell.enabled": false,
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "Kubernetes": "./kubernetes/*.yaml",
    "https://raw.githubusercontent.com/recyclarr/recyclarr/master/schemas/config-schema.json": "recyclarr.yaml",
    "https://raw.githubusercontent.com/recyclarr/recyclarr/master/schemas/settings-schema.json": "settings.yaml",
    "https://taskfile.dev/schema.json": [
      "**/Taskfile.yaml",
      ".taskfiles/*.yml"
    ],
    "https://raw.githubusercontent.com/budimanjojo/talhelper/master/pkg/config/schemas/talconfig.json": "./kubernetes/bootstrap/talos/talconfig.yaml"
  },
  "material-icon-theme.folders.associations": {
    ".taskfiles": "utils",
    "bootstrap": "seeders",
    "flux": "pipe",
    "talos": "linux",
    // namespaces
    "cert-manager": "guard",
    "kube-system": "kubernetes",
    "networking": "connection",
    "monitoring": "event",
    "flux-system": "pipe",
    "rook-ceph": "dump",
    // apps
    "cloudflared": "cloudflare",
    "radarr": "video",
    "radarruhd": "video",
    "radarranime": "video",
    "sonarr": "video",
    "sonarranime": "video",
    "sonarruhd": "video",
    "tautulli": "event"
  },
  "conventionalCommits.scopes": [
    "ci",
    "actions",
    "tasks",
    "vscode",
    "talos",
    "flux",
    "monitoring",
    "cilium",
    "metrics-server",
    "reloader",
    "alertmanager",
    "grafana",
    "kyverno",
    "loki",
    "thanos",
    "vector",
    "cert-manager",
    "external-dns",
    "ingress-nginx",
    "k8s-gateway",
    "omada-controller",
    "rook-ceph",
    "qbittorrent",
    "bazarr",
    "bazarr-anime",
    "bazarr-uhd",
    "overseer",
    "prowlarr",
    "radarr",
    "radarr-uhd",
    "radarranime",
    "recyclarr",
    "sabnzbd",
    "node-problem",
    "sonarr",
    "sonarranime",
    "sonarruhd",
    "tautulli",
    "vpn-gateway",
    "hajimari",
    "cloudflared",
    "gateway",
    "qbtools",
    "kube-prometheus-stack"
  ],
  "vs-kubernetes": {
    "vs-kubernetes.kubeconfig": "./kubeconfig",
    "vs-kubernetes.knownKubeconfigs": ["./kubeconfig"],
  },
  "sops.defaults.ageKeyFile": "age.key",
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ]
}
